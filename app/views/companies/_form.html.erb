<%= simple_form_for(@company) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name %>

    <%= f.input :address %>

    <%= f.input :postal_code %>

    <%= f.input :contact_person %>

    <%= f.input :contact_number %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

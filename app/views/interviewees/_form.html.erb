<%= simple_form_for(@interviewee) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :nationality %>
    <%= f.input :address %>
    <%= f.input :postal_code %>
    <%= f.input  :gender %>
    <%= f.input  :race %>
    <%= f.input  :mobile %>
    <%= f.input  :telephone %>
    <%= f.input  :religion %>
    <%= f.input  :email %>
    <%= f.input  :dob %>
    <%= f.input  :specialization %>
    <%= f.input  :prefer_industry %>
    <%= f.input  :country, collection: @continents, as: :grouped_select, group_method: :countries %>
    <%= f.input  :state %>
    <%= f.input  :willing_travel %>
    <%= f.input  :willing_relocate %>
    <%= f.input  :job_nature %>
    <%= f.input  :language %>
    <%= f.input  :remark %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

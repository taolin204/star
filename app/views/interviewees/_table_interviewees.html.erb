<div class='content' data-pjax-container>

  <div class='page-header'>
  <h3>List of Interviewees</h3>
  </div>
  <ul class="breadcrumb">
      <li class=""><a href="/" class="pjax">Dashboard</a></li>
      <span class="divider">/</span>
      <li class="active"><a href="/interviewees" class="pjax">Interviewee Management</a></li>
  </ul>

  <ul class='nav nav-tabs'>

    <li title="" rel="" class="icon index_collection_link active">
      <a class="pjax" href="/interviewees">
        <i class="icon-th-list"></i>
        <span>List</span>
      </a>
    </li>

    <li title="" rel="" class="icon new_collection_link ">
      <a class="pjax" href="/interviewees/new">
        <i class="icon-plus"></i>
        <span>Add new</span>
      </a>
    </li>
    
    <li class="dropdown" style="float:right">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Selected items<b class="caret"></b></a>
        <ul class="dropdown-menu" style="left:auto; right:0;">
            <li>
                <a href="#" onclick="jQuery('#bulk_action').val('export'); jQuery('#bulk_form').submit(); return false;">
                  Export selected Interviewees
                </a>
            </li>
            <li>
                <a href="#" onclick="jQuery('#bulk_action').val('bulk_delete'); jQuery('#bulk_form').submit(); return false;">
                  Delete selected Interviewees
                </a>
            </li>
        </ul>
    </li>
  </ul>

  <div id='list'>
  
    <form accept-charset="UTF-8" action="/interviewees/bulk_action" class="form" id="bulk_form" method="post">
      <div style="margin:0;padding:0;display:inline">
        <input name="utf8" type="hidden" value="&#x2713;" />
        <input name="authenticity_token" type="hidden" value="Uw/LvojZYAiuBdJbi3r4NHg+pESESrqhvCHKrRbajn0=" />
      </div>
      <input id="bulk_action" name="bulk_action" type="hidden" />
      <table class='table table-condensed table-striped'>
        <thead>
          <tr>
            <th class='shrink'>
            <input class='toggle' type='checkbox'>
            </th>
            <th class='header pjax headerSortDown id_field integer_type' data-href='/admin/ball?sort=id&amp;sort_reverse=true'>Id</th>
            <th class='header pjax headerSortDown custom_id_field integer_type' data-href='/interviewees?sort=custom_id&amp;sort_reverse=true'>Name</th>
            <th class='header pjax  created_at_field datetime_type' data-href='/interviewees?sort=created_at'>Nationality</th>
            <th class='header pjax  updated_at_field datetime_type' data-href='/interviewees?sort=updated_at'>Address</th>
            <th class='header pjax  updated_at_field datetime_type' data-href='/interviewees?sort=updated_at'>Postal Code</th>
            <th class='last shrink'></th>
          </tr>
        </thead>
        <tbody>
          <% @interviewees.each do |interviewee| %>
          <tr>
            <td>
            <input id="bulk_ids_" name="bulk_ids[]" type="checkbox" value="116" />
            </td>
            <td class='custom_id_field integer_type' title='<%= interviewee.id %>'><%= interviewee.id %></td>
            <td class='created_at_field datetime_type' title=<%= interviewee.first_name %>>
              <%= interviewee.first_name %>, <%= interviewee.last_name %>
            </td>
            <td class='updated_at_field datetime_type' title=<%= interviewee.nationality %>><%= interviewee.nationality %></td>
            <td class='name_field string_type' title='<%= interviewee.address %>'><%= interviewee.address %></td>
            <td class='name_field string_type' title='<%= interviewee.postal_code %>'><%= interviewee.postal_code %></td>
            <td class='last links'>
            <ul class='inline'>
                      <li title="Show" rel="tooltip" class="icon show_member_link ">
                        <a class="pjax" href="/interviewees/<%= interviewee.id %>">
                          <i class="icon-info-sign"></i>
                          <span style='display:none'>Show</span>
                        </a>
                      </li>
                    
                      <li title="Edit" rel="tooltip" class="icon edit_member_link ">
                        <a class="pjax" href="/interviewees/<%= interviewee.id %>/edit">
                          <i class="icon-pencil"></i>
                          <span style='display:none'>Edit</span>
                        </a>
                      </li>
                    
                      <li title="Delete" rel="tooltip" class="icon delete_member_link ">
                        <a class="pjax" href="/interviewees/<%= interviewee.id %>/delete">
                          <i class="icon-remove"></i>
                          <span style='display:none'>Delete</span>
                        </a>
                      </li>
                    
                      <li title="History" rel="tooltip" class="icon history_show_member_link ">
                        <a class="pjax" href="/interviewees/<%= interviewee.id %>/history">
                          <i class="icon-book"></i>
                          <span style='display:none'>History</span>
                        </a>
                      </li>
                    </ul>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class='clearfix total-count'>4 divisions</div>
    </form>

  </div>
</div>